<%
ranks = [2, 3, 4, 5, 6, 7, 8, 9, 10, "ace", "jack", "king", "queen"]
suits = ["clubs", "diamonds", "hearts", "spades"]

deck = []
for rank in ranks
    for suit in suits
        card = "#{rank}_of_#{suit}"
        deck.push(card)
    end
end

shuffled_deck = deck.shuffle
hand = shuffled_deck[0,5]

# rank1 = ranks.sample
# suit1 = suits.sample

# rank2 = ranks.sample
# suit2 = suits.sample


%>

<h1>Shuffle the Cards</h1>

<p>
    <% for card in hand %>
        <img src="/images/cards/<%= card %>.svg">
    <% end %>
</p>

<p>
    <a href="/cards">Shuffle Again!</a>
</p>